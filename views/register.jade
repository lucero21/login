extends layout

block content
  center
    .container
        h1 Pagina de Registro
        p.lead Gracias por registrarte, ingresa los siguientes datos:
        br
        form(role='form', action="/register",method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='text', name="username", placeholder='Usuario')
            .form-group
                input.form-control(type='password', name="password", placeholder='Contraseña')
            .form-group
                input.form-control(type='text', name="edad", placeholder='Edad')
            .form-group
                input.form-control(type='text', name="pais", placeholder='País')
            .form-group
                input.form-control(type='text', name="email", placeholder='***@dominio.com')
            button.btn.btn-default(type='submit') Enviar
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp
            a(href='/')
                button.btn.btn-primary(type="button") Cancelar
                br
                h4= info



